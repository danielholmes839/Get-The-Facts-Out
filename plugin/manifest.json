{
	"name": "Get The Facts Out",
	"version": "1.0",
	"description": "Highlights facts on a webpage",
	"manifest_version": 2,
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"browser_action": {
		"default_popup": "popup.html",
		"default_title": "Get The Facts Out"
	},
    "background": {
    	"scripts": ["background.js"],
    	"persistent": false
    }
}
